<html>

<head>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.12.4/jquery.min.js"></script>
    <title>
        SciWards
    </title>
    <div id="navbar"></div>
    <link rel="stylesheet" href="/CSS/redeem_page.css">
</head>

<body>
    <br>
    <br>
    <div class="container">
        <h2>Redeem</h2>
        <input type="text" name="search" placeholder="Search..">
        <div class="products-wrapper">
            <ul class="products">
                <!-- TEMPLATE -->
                {{#each rewards}}
                <li>
                    <img src="{{image}}"/>
                    <h3>{{price}} points</h3>
                    <h3>{{name}}</h3>
                    <p>{{description}}</p>
                    <div class="buttons-wrapper">
                        <button type="button" class="btn redeem-button">redeem</button>
                        <button type="button" class="btn goal-button">set goal</button>
                    </div>
                </li>
                {{/each}}
