            </ul>
        </div>
    </div>
    <!-- Load Navbar -->
    <script>
        $("#navbar").load("/nav");

        function setGoal(name) {
            alert("You have set a new avatar!");
            $.post(' /setGoal ', {
                reward: name
            });
            $("#profileImg").attr('src', name);
        }
        
    </script>
