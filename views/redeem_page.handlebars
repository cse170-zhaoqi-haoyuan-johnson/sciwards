                {{#each avatars.rewards}} {{#ifCond level '<=' ../profile.level}}
                <li>
                    <img src="{{name}}">

                    <div class="buttons-wrapper">
                        <button type="button" class="btn goal-button" onclick="setGoal({{json name}})">set avatar</button>
